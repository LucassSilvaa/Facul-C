//Faça um programa que calcule a média aritmética de 3 notas, para 3 alunos
// diferentes. a) Usando a estrutura de repetição while
#include <stdio.h>
#include <math.h>

int main(){
float n1, n2, n3, nmed;

int sn = 1;
while (sn <= 3)
{
printf("Digite a primeira nota : ");
scanf("%f",&n1);
printf("Digite a segunda nota : ");
scanf("%f",&n2);
printf("Digite a terceira nota : ");
scanf("%f",&n3);
nmed = (n1 + n2 + n3)/3;
printf("A nota média foi de : %.2f \n", nmed);
sn++;
}
return 0;
}
